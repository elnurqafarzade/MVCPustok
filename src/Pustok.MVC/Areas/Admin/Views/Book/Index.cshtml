@model List<Book>


@{
    int no = 0;
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">

            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <h4 class="card-title">Book Table</h4>
                            <a asp-action="Create" class="btn btn-success">Create Book</a>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            No
                                        </th>
                                        <th>
                                            Title
                                        </th>
                                        <th>
                                            Code
                                        </th>
                                        <th>
                                            Sale Price
                                        </th>
                                        <th>
                                            Cost Price
                                        </th>
                                        <th>
                                            Stock Count
                                        </th>
                                        <th>
                                            Image
                                        </th>
                                        <th>
                                            Settings
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (Book book in Model)
                                    {
                                        no++;
                                        <tr>
                                            <td class="py-1">
                                                @no
                                            </td>
                                            <td>
                                                <p>@book.Title</p>
                                            </td>
                                             <td>
                                                <p>@book.ProductCode</p>
                                            </td>
                                             <td>
                                                <p>@book.CostPrice</p>
                                            </td>
                                             <td>
                                                <p>@book.SalePrice</p>
                                            </td>
                                             <td>
                                                <p>@book.StockCount</p>
                                            </td>
                                             <td>
                                                <img style="width:150px; height:150px;" src="~/uploads/books/@book.BookImages.FirstOrDefault(x => x.IsPoster == true)?.ImageUrl" />
                                            </td>

                                            <td>
                                                <a class="btn btn-primary btn-info" asp-action="Update" asp-route-id="@book.Id">Update<i class="mdi mdi-grease-pencil"></i></a>
                                                <a class="btn btn-danger btn-info" asp-action="Delete" asp-route-id="@book.Id">Delete<i class="mdi mdi-delete"></i></a>

                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
